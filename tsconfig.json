{
    "compilerOptions": {
        "baseUrl": ".",
        "lib": [
            "esnext",
            "dom"
        ],
        "moduleResolution": "node",
        "jsx": "react",
        "strict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "target": "es2019",
        "noEmit": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "pretty": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./typings",
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
